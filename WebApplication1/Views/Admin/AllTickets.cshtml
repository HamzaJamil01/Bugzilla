@{
    ViewData["Title"] = "All Tickets";
}
@model List<Ticket>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Assigned To</th>
            <th>Sprint</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Id</td>
                <td>@ticket.Title</td>
                <td>@ticket.Description</td>
                <td>@ticket.status</td>
                <td>@ticket.AssignedTo</td>
                <td>@ticket.sprint</td>
                <td>
                    <a asp-action="UpdateTicket" asp-controller="Admin" asp-route-id="@ticket.Id" class="btn btn-primary">Update</a>
                </td>
                <td>
                    <a asp-action="DeleteTicket" asp-controller="Admin" asp-route-id="@ticket.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>