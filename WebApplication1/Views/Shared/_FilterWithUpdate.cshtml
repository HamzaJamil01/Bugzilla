@model List<Ticket>
<div class="row">
    <!-- Column for ToDo -->
    <div class="col-md-2">
        <h2>ToDo</h2>
        @foreach (var ticket in Model)
        {
            if (ticket.status == "To Do")
            {
                <div class="card" data-toggle="modal" data-target="#taskModal1">
                    <div class="card-body">
                        <h5 class="card-title">@ticket.Title</h5>
                        <p class="card-text">Assigned to: @ticket.AssignedTo</p>
                        <p class="card-text">Sprint No: @ticket.sprint</p>
                        <a asp-action="ShowTicketWithUpdate" asp-controller="User" asp-route-id="@ticket.Id" class="btn btn-primary">Get Details</a>
                    </div>
                </div>
            }
        }
    </div>

